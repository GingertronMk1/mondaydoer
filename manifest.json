{
  "name": "Monday Doer",
  "description": "Automatically do your Monday reports",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Click me!"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.monday.com/my_work?dailyupdate=1"
      ],
      "js": ["action.js"]
    }
  ]

}